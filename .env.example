# Business Intelligence Dashboard - Environment Variables Example
# Copy this file to .env and fill in your actual values

# Database connection string (for MongoDB)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Google Analytics Configuration
# Client-side tracking (for website analytics)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Server-side GA4 Data API (for dashboard analytics)
GA4_PROPERTY_ID=123456789
GA4_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GA4_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----"
GA4_SERVICE_ACCOUNT_PROJECT_ID=your-google-cloud-project-id

# Stripe API Keys (for payment processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_PRICE_ID=price_your_price_id

# Security Secrets
SESSION_SECRET=your_random_strong_session_secret_min_32_chars
JWT_SECRET=your_random_strong_jwt_secret_min_32_chars
JWT_EXPIRES_IN=24h

# Webhook Configuration (optional - can be configured per tenant in settings)
WEBHOOK_SECRET=your_global_webhook_secret_for_fallback

# Resend Email API (for email sending and management)
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_DOMAIN=your-domain.com
RESEND_FROM_NAME=Your Business Name

# Server Configuration
PORT=5000
NODE_ENV=development

# Default Testing Admin Credentials (for development only)
# These are used to pre-fill the login form during development
VITE_DEFAULT_ADMIN_EMAIL=admin@businessdash.com
VITE_DEFAULT_ADMIN_PASSWORD=your_test_password

# Database Configuration (alternative format)
MONGODB_USERNAME=your_mongodb_username
MONGODB_PASSWORD=your_mongodb_password
MONGODB_CLUSTER=your_cluster.mongodb.net
MONGODB_DATABASE=businessdash

# Admin Accounts (server-side)
ADMIN_OWNER_EMAIL=owner@businessdash.com
ADMIN_OWNER_PASSWORD=secure_owner_password
ADMIN_OWNER_NAME=Business Owner

ADMIN_DEV_EMAIL=admin@businessdash.com
ADMIN_DEV_PASSWORD=secure_dev_password
ADMIN_DEV_NAME=System Developer